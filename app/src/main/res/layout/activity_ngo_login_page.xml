<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ngoLoginPage"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="NGO Login"
        android:textColor="#EADAFD"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPorfilePhoto"
        android:layout_width="165dp"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_my_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="Personal Details: "
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPorfilePhoto" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name_ngo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:hint="Name"
        android:textColorHint="@color/white"
        />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/address_ngo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:hint="Add"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/name_ngo"
        app:layout_constraintStart_toStartOf="@+id/name_ngo"
        app:layout_constraintTop_toBottomOf="@+id/name_ngo" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Email_ngo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:hint="Email"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/address_ngo"
        app:layout_constraintStart_toStartOf="@+id/address_ngo"
        app:layout_constraintTop_toBottomOf="@+id/address_ngo" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Pnone_no_ngo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:hint="Phone no"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/Email_ngo"
        app:layout_constraintStart_toStartOf="@+id/Email_ngo"
        app:layout_constraintTop_toBottomOf="@+id/Email_ngo" />

    <Button
        android:id="@+id/Submit_btn_ngo"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/Pnone_no_ngo"
        app:layout_constraintStart_toStartOf="@+id/Pnone_no_ngo"
        app:layout_constraintTop_toBottomOf="@+id/Pnone_no_ngo" />

</androidx.constraintlayout.widget.ConstraintLayout>